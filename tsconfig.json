{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "outDir": "./output",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/svelte/i18n.js", "src/svelte/i18n.js"],
  "exclude": ["node_modules", "output"]
}
